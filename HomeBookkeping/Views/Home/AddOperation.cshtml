            elem1.setAttribute("type", "datetime-local");
            elem1.setAttribute("class", "form-control");
            elem1.setAttribute("name", "Data1");
            elem1.setAttribute("id", "inputinp");

             var elem3 = document.createElement("label");
            elem3.setAttribute("class", "control-label");
            elem3.innerHTML = "Дата начала периода";

            var elem4 = document.createElement("input");
            elem4.setAttribute("type", "datetime-local");
            elem4.setAttribute("class", "form-control");
