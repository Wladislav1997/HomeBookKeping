    var languagesSelect = document.getElementById("selecttype");

    function changeOption() {

        var selectedOption = languagesSelect.options[languagesSelect.selectedIndex].value;
        if (selectedOption === "period") {
            var form1 = document.getElementById("Form1");

            var elem2 = document.createElement("div");
            elem2.setAttribute("class", "form-control")

             var elem5 = document.createElement("div");
            elem2.setAttribute("class", "form-control")

            var elem = document.createElement("label");
            elem.innerHTML = "Дата начала периода";
