@model HomeBookkeping.Models.Operation

<h1>Добавление Операции</h1>

<form asp-action="AddOperation" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите Название</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Action">Действие</label>
            <input asp-for="Action" />
            <span asp-validation-for="Action" />
        </div>
        <div class="form-group">
            <label asp-for="Type">Введите Тип</label>
            <input type="text" asp-for="Type" />
            <span asp-validation-for="Type" />
        </div>
        <div class="form-group">
            <label asp-for="View">Вид</label>
            <input type="text" asp-for="View" />
            <span asp-validation-for="View" />
        </div>
        <div class="form-group">
            <label asp-for="Sum">Сумма</label>
            <input type="text" asp-for="Sum" />
            <span asp-validation-for="Sum" />
        </div>
        <div class="form-group">
            <label asp-for="Data">Введите Дату</label>
            <input type="text" asp-for="Data" />
            <span asp-validation-for="Data" />
        </div>
        <div class="form-group">
            <label asp-for="Coment">Введите Коментарий</label>
            <input type="text" asp-for="Coment" />
            <span asp-validation-for="Coment" />
        </div>
        <div class="form-group">
            <p>
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <button type="reset"  class="btn btn-primary" >Отмена</button>
            </p>
        </div>
        
    </div>
</form>